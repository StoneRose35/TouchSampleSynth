    <Button
        android:id="@+id/buttonNew"
        android:text="+"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="27dp"
        android:layout_marginStart="11dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@id/toggleEdit"
        app:layout_constraintTop_toTopOf="parent"
        />


    <ToggleButton
        android:id="@+id/toggleEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="11dp"
        android:textOff="@string/editTogglePlay"
        android:textOn="@string/editToggleEdit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ch.sr35.touchsamplesynth.views.VuMeter
        android:id="@+id/vuMeter"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="11dp"
        app:layout_constraintEnd_toStartOf="@+id/toggleEdit"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageSpeaker"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/speaker"
        android:background="@color/darkyellow"
        android:contentDescription="@string/content_description_instrument_speaker"
        android:padding="6dp"
        android:layout_marginEnd="3dp"
        app:layout_constraintEnd_toStartOf="@id/vuMeter"
        app:layout_constraintTop_toTopOf="@id/vuMeter"
        app:layout_constraintBottom_toBottomOf="@id/vuMeter"
        />

    <ch.sr35.touchsamplesynth.views.VuMeter
        android:id="@+id/cpuMeter"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toStartOf="@+id/imageSpeaker"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/imageCpu"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/processor"
        android:background="@color/darkyellow"
        android:contentDescription="@string/content_description_instrument_processor"
        android:padding="6dp"
        android:layout_marginEnd="3dp"
        app:layout_constraintEnd_toStartOf="@id/cpuMeter"
        app:layout_constraintTop_toTopOf="@id/cpuMeter"
        app:layout_constraintBottom_toBottomOf="@id/vuMeter"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
