<resources >
    <!-- Base application theme. -->
    <style name="Theme.TouchSampleSynth" parent="Theme.AppCompat.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/darker_grey</item>
        <item name="titleTextColor">@android:color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/darker_grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="touchElementTouchedColor">@color/dark_red</item>
        <item name="touchElementColor">@color/dark_green</item>
        <item name="touchElementLine">@color/light_grey</item>
        <item name="touchElementEditDot">@color/light_grey</item>
        <item name="touchElementEditBoxBgColor">@color/white</item>
        <item name="touchElementEditTextColor">@color/light_grey</item>
        <item name="sliderDrawable">@drawable/slider</item>
        <item name="seekBarLineColor">@color/white</item>

        <item name="instrumentPageTitleTextColor">@color/red_light</item>
        <item name="instrumentBackgroundColor">@color/medium_gray</item>

        <item name="sceneEditBackgroundColor">@color/dark_gray</item>
        <item name="touchElementLinkColor">@color/vu_meter_green</item>
        <item name="touchElementLinkSize">8.0</item>


        <item name="pianoRollBigKeyColor">@color/darkeryellow</item>
        <item name="pianoRollBigKeySelectionColor">@color/red_dark</item>
        <item name="pianoRollSmallKeyColor">@color/darker_grey</item>
        <item name="pianoRollSmallKeySelectionColor">@color/light_grey</item>
        <item name="pianoRollOutlineColor">@color/black</item>
        <item name="pianoRollOctaveNoSelectionColor">@color/red_dark</item>
        <item name="pianoRollOctaveSelectionColor">@color/red_light</item>
        <item name="pianoRollOctaveSelectionOutlineColor">@color/medium_green</item>

        <item name="knobImage">@drawable/knob_white</item>
        <item name="knobScaleColor">@color/white</item>
    </style>
    <style name="Theme.TouchSampleSynth.Instrument">
        <item name="android:textColor">@color/vu_meter_background</item>
        <item name="android:shadowColor">@color/vu_meter_background</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:progressTint">@color/very_light_gray</item>
        <item name="android:progressBackgroundTint">@color/very_light_gray</item>
        <item name="android:progressTintMode">src_over</item>
        <item name="android:progressBackgroundTintMode">src_over</item>
        <item name="android:thumb">@drawable/slider</item>
        <item name="android:background">@color/dark_gray</item>
    </style>

</resources>